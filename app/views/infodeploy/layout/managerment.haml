%header
  %nav
    = link_to "添加",new_layout_path()
  %h2
    布局样式管理

%section
  %table.list
    %thead
      %tr
        %th 序号
        %th 名称
        %th 文件名
        %th 区域数
        %th 操作
    %tbody
      - index=0
      - @layout.each do |list|
      - index=index+1
        %tr
          %td= index
          %td=list.title
          %td=list.file
          %td=list.areanumber
          %td
            = link_to "编辑", edit_layout_path(list)
            - if list.system!=0
              = link_to "删除", layout_path(list),:confirm=> '您是否要删除该布局样式?', :method =>:delete


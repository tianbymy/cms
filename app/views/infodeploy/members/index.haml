%header
  %nav
    = link_to "新建用户",new_member_path
    = link_to "返回",admins_path
  %h2 用户管理
  %section
    %table.list
      %thead
        %tr
          %th 用户名
          %th 姓名
          %th 操作
      %tbody
        - @members.each do |member|
          %tr
            %td= member[:uid]
            %td= member[:display]
            %td
              = link_to "编辑",edit_member_path(:id => member[:uid])
              - if member[:uid] != "administrator"
                = link_to "删除",member_path(:id => member[:uid]),:method => :delete,confirm: "您是否确定删除此用户?"
              = link_to "重置密码",member_password_update_path(:member_id => member[:uid])
